.container {
  padding: 20px;
}

.message-list {
  flex: 1;
	overflow-y: auto;
	padding-bottom: 200px;
}

.user-message {
  text-align: right;
  background-color: #e1f5fe;
  padding: 8px;
  margin: 5px;
  border-radius: 8px;
  display: inline-block;
  clear: both;
  float: right;
}

.bot-message {
  text-align: left;
  background-color: #f1f8e9;
  padding: 8px;
  margin: 5px;
  border-radius: 8px;
  display: inline-block;
  clear: both;
}

.input-block {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  padding: 0 20px 20px 20px;
  border: 1px solid #eeeeee;
  display: block;
  background-color: #fff;
}

.text {
	white-space: pre-wrap;
}